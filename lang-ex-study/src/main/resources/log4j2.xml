<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}] [%t] %-5p %c{1}.%M(%L): - %msg%n\n"/>
        </Console>

        <RollingFile name="RollingFile" filename="log/lang-ex-study.log"
                     filepattern="log/payment-%d{yy-MM-dd_HH-mm-ss}.log">
            <PatternLayout pattern="[%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}] [%t] %-5p %c{3}.%M(%L): - %msg%n\n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="200"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>
